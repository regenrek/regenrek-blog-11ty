<div class="container">
    {% set similar = collections.posts | similarPosts(page.inputPath, tags) %}
    <ul>
        {% for post in similar | limit(3) %}
            {{ post.data.title | log }}
            <li>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
            </li>
        {% endfor %}
    </ul>
</div>